{
    "manifest_version": 2,
    "name": "WordReplace",
    "version": "0.1",
  
    "description": "Search and replaces words on a page automatically",
  
    "icons": {
      "48": "icons/icon-48.png",
      "96": "icons/nonexistent-96.png"
    },

    "permissions": [
        "activeTab",
        "menus",
        "storage"
    ],

    "browser_action": {
        "default_icon": "icons/icon-32x32.png",
        "default_title": "WordReplace",
        "default_popup": "popup/popup.html"
    },

    "background": {
      "scripts": ["background_scripts/background.js"],
      "persistent": false
    },
    

    "web_accessible_resources" : []
  }